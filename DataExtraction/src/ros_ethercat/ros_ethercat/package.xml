<package>
  <name>ros_ethercat</name>
  <version>0.3.1</version>
  <description>A pr2 agnostic replacement for robots using EtherCAT</description>
  <maintainer email="software@shadowrobot.com">Shadow Robot's software team</maintainer>

  <license>BSD</license>
  
  <url type="website">http://ros.org/wiki/ros_ethercat</url>
  <url type="repository">https://github.com/shadow-robot/ros_ethercat</url>
  <url type="bugtracker">https://github.com/shadow-robot/ros_ethercat/issues</url>

  <author>Manos Nikolaidis</author>

  <!-- Dependencies which this package needs to build itself. -->
  <buildtool_depend>catkin</buildtool_depend>

  <!-- Dependencies needed after this package is compiled. -->
  <run_depend>ros_ethercat_hardware</run_depend>
  <run_depend>ros_ethercat_loop</run_depend>
  <run_depend>ros_ethercat_model</run_depend>
  
  <export>
    <metapackage/>
  </export>
</package>
